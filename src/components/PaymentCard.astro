---
import { Icon } from "astro-icon/components";

const cardIcons = ["visa", "mastercard", "amex", "discover", "jcb", "diner"];
---

<!-- Payment Step -->
<div
  id="step-1"
  class="p-6 space-y-6 max-w-sm sm:max-w-md md:max-w-md lg:max-w-md mx-auto hidden"
>
  <div class="mt-6 space-y-1">
    <h3 class="text-xl font-semibold">Payment</h3>
    <p class="text-gray-600">
      Add your preferred payment method below to complete your booking.
    </p>
  </div>
  <div class="flex flex-col">
    <div class="w-full flex justify-between gap-3">
      <div id="accept-blue-iframe" class="h-[230px] md:w-2/3 w-2/3"></div>
      <div
        id="card-icons-container"
        class="grid grid-cols-[42px_42px] gap-4 content-start justify-end place-items-start pt-7 w-1/3 bg-red-950/0"
      >
        {
          cardIcons.map((name) => (
            <Icon
              data-card={name}
              name={`payment_cards/${name}`}
              class="w-[42px] h-[28px]"
            />
          ))
        }
      </div>
    </div>
    <div id="accept-blue-error-container" class="hidden gap-2 items-center">
      <Icon name="error" class="text-red-500" />
      <span id="accept-blue-error-span" class="text-red-500 text-sm"></span>
    </div>
  </div>
</div>
