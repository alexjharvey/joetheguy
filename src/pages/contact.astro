---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Request a Quote Form">
  <div class="page-container">
    <!-- Dark overlay -->
    <div class="overlay"></div>
    <!-- Background pic -->
    <div class="form-container bg-primary">
      <h1>Get a Quote</h1>
      <h2>
        Your Project, Joe's Got It!
      </h2>
      <form id="contact-form">
        <input type="text" name="name" placeholder="Name" required />
        <input type="email" name="email" placeholder="Email" required />
        <input type="tel" name="phone" placeholder="Phone" required />
        <select name="service" required>
          <option value="" disabled selected>Choose Service</option>
          <option value="kitchen">Kitchen</option>
          <option value="handyman">General Handyman</option>
          <option value="dumpsters">Dumpster Rental</option>
          <option value="decks">Decks & Patios</option>
          <option value="roofing">Roofing</option>
          <option value="flooring">Flooring</option>
          <option value="bathroom">Bathroom</option>
          <option value="commercial">Commercial</option>
          <option value="other">Other</option>
        </select>
        <textarea name="message" placeholder="How Can We Help?" required
        ></textarea>
        <button type="submit" class="bg-accent1">Submit</button>
      </form>
    </div>
  </div>
</MainLayout>
<script>

  const contactForm = document.querySelector("#contact-form");
  if (contactForm) {
    contactForm.addEventListener("submit", async function (e) {
      e.preventDefault();

      // Collect form data
      const form = e.target as HTMLFormElement;//<-- This?
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      try {
        const response = await fetch(
          "https://email-api-liard.vercel.app/api/contact",
          {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
              "x-client-key": "${companyInfo.emailKey}",
            },
            body: JSON.stringify(data),
          }
        );

        const result = await response.json();

        if (response.ok) {
          alert("Message sent successfully!");
        } else {
          alert("Error: " + result.error);
        }
      } catch (err) {
        console.error(err);
        alert("Network error. Please try again later. "+ err);
      }
    });
  }
</script>
<style>
  .page-container {
    font-family: "Segoe UI", Arial, sans-serif;
    min-height: 100vh;
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: url("@/images/appointment/13.png") left center/cover no-repeat;
    position: relative;
  }
  .overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 0;
    border-radius: inherit;
  }

  .form-container {
    padding: 2.5rem 2rem;
    border-radius: 1.25rem;
    box-shadow: 0 8px 32px rgba(60, 60, 120, 0.15);
    max-width: 400px;
    width: 100%;
    position: absolute;
    top: 50%;
    right: 5%;
    transform: translateY(-50%);
    z-index: 1;
  }

  @media (max-width: 1024px) {
    .form-container {
      position: static;
      top: auto;
      right: auto;
      transform: none;
      margin: 2rem auto;
    }
  }
  h1 {
    margin-top: 0;
    font-size: 2rem;
    color: #fff;
    text-align: center;
  }
  h2 {
    margin-top: 0.5rem;
    font-size: 1.2rem;
    color: #fff;
    text-align: center;
    margin-bottom: 2rem;
    font-weight: 600;
  }
  form {
    display: flex;
    flex-direction: column;
    gap: 1.1rem;
  }
  input[type="text"],
  input[type="email"],
  input[type="tel"],
  select,
  textarea {
    padding: 0.75rem 1rem;
    border: 1px solid #d1d9e6;
    border-radius: 0.5rem;
    font-size: 1rem;
    background: #f7fafd;
    transition: border 0.2s;
  }
  input:focus,
  select:focus,
  textarea:focus {
    border-color: #4a90e2;
    outline: none;
    background: #fff;
  }
  select {
    color: #555;
  }
  textarea {
    min-height: 90px;
    resize: vertical;
  }
  button {
    padding: 0.85rem 0;
    color: #fff;
    font-size: 1.1rem;
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    font-weight: 600;
    transition: background 0.2s;
    margin-top: 0.5rem;
  }
  button:hover {
    background: #fff;
    color: var(--accent1)
  }
</style>
