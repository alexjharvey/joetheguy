---
import MainLayout from "../layouts/MainLayout.astro";
import StructuredData from '@/components/StructuredData.astro';
import { companyInfo } from '@/data/company-details';
import contactBg from '@/images/appointment/13.png';
const phone = companyInfo.phone;
const emailKey = companyInfo.emailKey;
const description = "Contact Joe The Guy for a free quote on home renovations, repairs, remodeling, or dumpster rentals in Spartanburg, Greenville, and Upstate SC. Fast, reliable service.";
---

<MainLayout title="Contact Us | Joe The Guy" description={description}>
	<StructuredData type="LocalBusiness" slot="head" />
  <div class="page-container">
    <!-- Dark overlay -->
    <div class="overlay"></div>
    <!-- Background pic -->
    <div class="form-container bg-primary">
      <h1>Get a Quote</h1>
      <h2>
        Your Project, Joe's Got It!
      </h2>
      <form id="contact-form">
        <input type="text" name="name" placeholder="Name" required />
        <input type="email" name="email" placeholder="Email" required />
        <input type="tel" name="phone" placeholder="Phone" required />
        <select name="service" required>
          <option value="" disabled selected>Choose Service</option>
          <option value="kitchen">Kitchen</option>
          <option value="handyman">General Handyman</option>
          <option value="dumpsters">Dumpster Rental</option>
          <option value="decks">Decks & Patios</option>
          <option value="roofing">Roofing</option>
          <option value="flooring">Flooring</option>
          <option value="bathroom">Bathroom</option>
          <option value="commercial">Commercial</option>
          <option value="other">Other</option>
        </select>
        <textarea name="message" placeholder="How Can We Help?" required
        ></textarea>
        <button type="submit" class="bg-accent1">Submit</button>
      </form>
    </div>
  </div>

  <!-- Success Modal -->
  <div id="success-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-xl max-w-md w-full p-8 relative animate-scale-in">
      <div class="text-center">
        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-4">
          <svg class="h-10 w-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-raleway font-bold text-gray-900 mb-3">Message Sent!</h3>
        <p class="text-gray-600 mb-6">Thank you for contacting us! We'll get back to you shortly.</p>
        <button id="success-modal-close" class="w-full bg-primary hover:bg-accent1 text-white font-semibold py-3 px-6 rounded-xl transition-colors">
          Got It
        </button>
      </div>
    </div>
  </div>

  <!-- Error Modal -->
  <div id="error-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-xl max-w-md w-full p-8 relative animate-scale-in">
      <div class="text-center">
        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-red-100 mb-4">
          <svg class="h-10 w-10 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-raleway font-bold text-gray-900 mb-3">Submission Failed</h3>
        <p id="error-modal-message" class="text-gray-600 mb-6">There was an error sending your message. Please try again or call us directly at {phone}</p>
        <button id="error-modal-close" class="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-xl transition-colors">
          Close
        </button>
      </div>
    </div>
  </div>
</MainLayout>
<script define:vars={{ phone, emailKey }}>
  // Modal utility functions
  const showSuccessModal = () => {
    console.log('showSuccessModal called');
    const modal = document.getElementById("success-modal");
    console.log('Success modal element:', modal);
    if (modal) {
      modal.classList.remove("hidden");
      console.log('Success modal classes after remove:', modal.className);
    } else {
      console.error('Success modal element not found!');
    }
  };

  const showErrorModal = (message) => {
    console.log('showErrorModal called with message:', message);
    const modal = document.getElementById("error-modal");
    console.log('Error modal element:', modal);
    const messageEl = document.getElementById("error-modal-message");
    if (message && messageEl) {
      messageEl.textContent = message;
    }
    if (modal) {
      modal.classList.remove("hidden");
      console.log('Error modal classes after remove:', modal.className);
    } else {
      console.error('Error modal element not found!');
    }
  };

  const hideModal = (modalId) => {
    const modal = document.getElementById(modalId);
    modal?.classList.add("hidden");
  };

  // Modal close button handlers
  document.getElementById("success-modal-close")?.addEventListener("click", () => {
    hideModal("success-modal");
    // Reset the form
    const form = document.getElementById("contact-form");
    form?.reset();
  });

  document.getElementById("error-modal-close")?.addEventListener("click", () => {
    hideModal("error-modal");
  });

  // Close modals on backdrop click
  document.getElementById("success-modal")?.addEventListener("click", (e) => {
    if (e.target === document.getElementById("success-modal")) {
      hideModal("success-modal");
    }
  });

  document.getElementById("error-modal")?.addEventListener("click", (e) => {
    if (e.target === document.getElementById("error-modal")) {
      hideModal("error-modal");
    }
  });

  // Close modals on escape key
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") {
      hideModal("success-modal");
      hideModal("error-modal");
    }
  });

  const contactForm = document.querySelector("#contact-form");
  if (contactForm) {
    contactForm.addEventListener("submit", async function (e) {
      e.preventDefault();

      // Collect form data
      const form = e.target;
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      // Disable submit button and show loading state
      const submitButton = form.querySelector('button[type="submit"]');
      if (submitButton) {
        submitButton.disabled = true;
        submitButton.textContent = "Sending...";
      }

      try {
        console.log('=== CONTACT FORM SUBMISSION ===');
        console.log('Form data:', data);

        // Send to Vercel API endpoint
        const apiUrl = 'https://email-api-liard.vercel.app/api/contact';
        const response = await fetch(apiUrl, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "x-client-key": emailKey,
          },
          body: JSON.stringify(data),
        });

        console.log('Response status:', response.status);
        console.log('Response ok:', response.ok);

        const result = await response.json();
        console.log('Response body:', result);

        if (response.ok) {
          console.log('SUCCESS - showing success modal');
          showSuccessModal();
        } else {
          console.log('ERROR - showing error modal');
          showErrorModal(`Error: ${result.error || 'Failed to send message'}. Please try again or call us directly at ${phone}`);
        }
      } catch (err) {
        console.error('CATCH ERROR:', err);
        showErrorModal(`Network error. Please try again later or call us directly at ${phone}`);
      } finally {
        console.log('Finally block - re-enabling button');
        // Re-enable submit button
        if (submitButton) {
          submitButton.disabled = false;
          submitButton.textContent = "Submit";
        }
      }
    });
  }
</script>
<style define:vars={{ 'bg-image': `url(${contactBg.src})` }}>
  .page-container {
    font-family: "Segoe UI", Arial, sans-serif;
    min-height: 100vh;
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-image) left center/cover no-repeat;
    position: relative;
  }
  .overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 0;
    border-radius: inherit;
  }

  .form-container {
    padding: 2.5rem 2rem;
    border-radius: 1.25rem;
    box-shadow: 0 8px 32px rgba(60, 60, 120, 0.15);
    max-width: 400px;
    width: 100%;
    position: absolute;
    top: 50%;
    right: 5%;
    transform: translateY(-50%);
    z-index: 1;
  }

  @media (max-width: 1024px) {
    .form-container {
      position: static;
      top: auto;
      right: auto;
      transform: none;
      margin: 2rem auto;
    }
  }
  h1 {
    margin-top: 0;
    font-size: 2rem;
    color: #fff;
    text-align: center;
  }
  h2 {
    margin-top: 0.5rem;
    font-size: 1.2rem;
    color: #fff;
    text-align: center;
    margin-bottom: 2rem;
    font-weight: 600;
  }
  form {
    display: flex;
    flex-direction: column;
    gap: 1.1rem;
  }
  input[type="text"],
  input[type="email"],
  input[type="tel"],
  select,
  textarea {
    padding: 0.75rem 1rem;
    border: 1px solid #d1d9e6;
    border-radius: 0.5rem;
    font-size: 1rem;
    background: #f7fafd;
    transition: border 0.2s;
  }
  input:focus,
  select:focus,
  textarea:focus {
    border-color: #4a90e2;
    outline: none;
    background: #fff;
  }
  select {
    color: #555;
  }
  textarea {
    min-height: 90px;
    resize: vertical;
  }
  button {
    padding: 0.85rem 0;
    color: #fff;
    font-size: 1.1rem;
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    font-weight: 600;
    transition: background 0.2s;
    margin-top: 0.5rem;
  }
  button:hover {
    background: #fff;
    color: var(--accent1)
  }

  @keyframes scale-in {
    0% {
      transform: scale(0.9);
      opacity: 0;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }
  .animate-scale-in {
    animation: scale-in 0.2s ease-out;
  }
</style>
