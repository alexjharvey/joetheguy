---
import { Icon } from 'astro-icon/components';
import Layout from '../layouts/MainLayout.astro';
import "flatpickr/dist/flatpickr.min.css";
import ProhibitedMaterials from '@/components/ProhibitedMaterials.astro';


const keywords = ["dumpsters", "dumpster", "dumpsters rental", "dumpster rental", "roll off dumpster", "rental", "roll of dumpster","in Spartanburg", "Spartanburg", "home remodeling", "home", "Greenville", "in Greenville", "Greer", "in Greer", "home renovation", "renovations", "home renovation", "home remodeling", "remodeling", "home repair", "repairman", "repair", "dumpster rental near me", "trash removal", "garbage", "trash", "Inman", "in Inman", "trash pick up", "trash removal service", "trash removal near me", "trash removal service near me", "trash removal service in Spartanburg", "trash removal service in Greenville", "trash removal service in Greer", "trash removal service in Inman"];


---
<Layout title="Joe the Guy - Dumpster Rental", keywords={keywords}>
  <div class="w-full h-auto relative max-h-[400px] sm:max-h-[500px] md:max-h-[600px] lg:max-h-none overflow-hidden">

      <img src="/images/dumpsters/roll-off.png" alt="Dumpster Rental" class="opacity-50 w-full h-[400px] sm:h-[500px] md:h-[600px] lg:h-auto lg:max-h-96 object-cover"/>
      <div class="absolute top-4 bottom-4 left-4 sm:top-6 sm:bottom-6 sm:left-8 md:left-16 lg:top-8 lg:bottom-8 lg:left-28 flex-col text-left bg-black bg-opacity-50 w-[85%] sm:w-3/4 md:w-2/3 lg:max-w-2xl">
        <div class="relative font-raleway uppercase text-xl sm:text-2xl lg:text-3xl font-semibold border-b-2 border-primary bg-opacity-85">
          <h1 class="text-primary pt-4 px-4 sm:pt-6 sm:px-6 lg:pt-8 lg:px-8">Need a dumpster?</h1>
          <h2 class="text-white mt-1 px-4 sm:px-6 lg:px-8 pb-2">Dumpster Rental Services</h2>
        </div>
        <div class="relative bg-opacity-5">
          <h2 class="text-white font-normal text-lg sm:text-lg lg:text-lg/8 px-4 sm:px-6 lg:px-8 pt-2">Looking for dumpster rental in Spartanburg? We provide affordable, fast, and hassle-free roll-off dumpster rentals for homeowners, contractors, and businesses. Whether you're handling a home renovation, construction project, or major cleanup, we have the right dumpster size for your needs.</h2>
          <button class="text-white font-semibold text-sm sm:text-base bg-primary px-4 sm:px-6 lg:px-8 mx-4 sm:mx-6 lg:mx-8 mt-4 mb-4 sm:mb-6 lg:mb-8 py-2 rounded-2xl hover:bg-accent1 hover:text-white">Contact Us</button>
        </div>
      </div>

  </div>

  <div class="flex flex-col lg:flex-row justify-center align-middle px-4 md:px-8 lg:px-16">
    <div class="w-full lg:w-1/2 mx-auto mt-8">
      <img src="/images/dumpsters/10yd.jpg" class="w-full h-auto" alt="10 Yard Dumpster"/>
    </div>
  <div class="w-full lg:w-1/2 mx-auto mt-8 lg:ml-8">
    <div class="flex flex-col">
      <h1 class="text-2xl md:text-3xl font-raleway font-bold">20 Cubic Yard, 2 Ton Max</h1>
      <h1 class="text-2xl md:text-3xl font-raleway font-bold"> General Debris Dumpster</h1>
      <div class="flex flex-col sm:flex-row sm:items-center my-6 md:my-8 gap-4 sm:gap-0">
        <div class="text-lg md:text-xl">
          <span class="text-primary font-bold text-2xl md:text-3xl">$525</span>/week
        </div>
        <div class="flex items-center sm:ml-8 md:ml-16 lg:ml-40">
          <Icon name="map-pin" class="text-primary mr-2 w-5 h-5"/> <span class="text-sm md:text-base">Available in Spartanburg County</span>
        </div>
      </div>
      <div class="text-sm md:text-base">
        Whether it's time for spring cleaning, a home renovation, or a major construction project, our 20 cubic yard dumpster is the perfect solution for your waste removal needs. This dumpster is ideal for general debris, including household items, furniture, and construction materials.
      </div>
      <div class="mt-6 space-y-3">
  <button
    data-toggle-prohibited
    class="text-blue-600 underline hover:no-underline text-sm font-medium"
  >
    Prohibited materials
  </button>

  <ProhibitedMaterials />
</div>

<script>
  if (typeof window !== "undefined") {
    window.addEventListener("DOMContentLoaded", () => {
      const btn = document.querySelector("[data-toggle-prohibited]");
      const panel = document.getElementById("prohibited-materials-panel");

      if (!btn || !panel) return;

      btn.addEventListener("click", (e) => {
        e.preventDefault();
        const hidden = panel.hasAttribute("hidden");

        if (hidden) {
          panel.removeAttribute("hidden");
          btn.textContent = "Hide prohibited materials";
        } else {
          panel.setAttribute("hidden", "");
          btn.textContent = "Prohibited materials";
        }
      });
    });
  }
</script>
      <div class="flex flex-col sm:flex-row gap-4 mt-6 md:mt-8">
        <input id="datepicker-start" type="text" class="w-full sm:w-auto flex-1 border border-gray-300 p-2 md:p-3 rounded text-sm md:text-base" placeholder="Select Delivery Date"/>
        <input id="datepicker-end" type="text" class="w-full sm:w-auto flex-1 border border-gray-300 p-2 md:p-3 rounded text-sm md:text-base" placeholder="Select Pickup Date"/>
      </div>
      <div class="flex mt-4 md:mt-6">
        <button class="bg-primary text-white py-2 md:py-3 px-6 md:px-8 rounded-2xl text-sm md:text-base font-semibold hover:bg-accent1 transition-colors">Book Now</button>
        <script src="../scripts/datepicker.ts"></script>
      </div>
      
    </div>
    <h1></h1>
  </div>

</div>
</Layout>